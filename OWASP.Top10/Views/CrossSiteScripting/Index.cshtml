@model IEnumerable<OWASP.Top10.ViewModels.CommentViewModel>
@{
    ViewBag.Title = "Cross-Site Scripting";
}

<h2>Cross-Site Scripting</h2>

<p>&nbsp;</p>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" action="~/CrossSiteScripting/Index" method="post">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" style="max-width:100%;" id="searchQuery" placeholder="" name="searchQuery">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Add Your Comment</button>
                </div>
            </div>

            <div class="form-group">
                <h3>Recent Comments</h3>
                <div class="col-sm-12">

                    <div class="row">
                        <div class="col-md-12">
                            <ul>
                                @foreach (var item in Model)
                                {
                                    @*<li> @Html.DisplayFor(modelItem => item.Comment)</li>*@
                                <li>@Html.Raw(item.Comment)</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>