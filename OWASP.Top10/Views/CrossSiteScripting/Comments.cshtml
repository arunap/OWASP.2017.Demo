<h4>Add your comments to this article</h4>
<div class="actionBox">
    <ul class="commentList">
        <li>
            <div class="commenterImage">
                <img src="http://placekitten.com/50/50" />
            </div>
            <div class="commentText">
                <p class="">Hello this is a test comment.</p> <span class="date sub-text">Thursday, April 4, 2019</span>

            </div>
        </li>
        <li>
            <div class="commenterImage">
                <img src="http://placekitten.com/49/49" />
            </div>
            <div class="commentText">
                <p class="">Hello this is a test comment and this comment is particularly very long and it goes on and on and on.</p> <span class="date sub-text">Thursday, April 4, 2019</span>

            </div>
        </li>
        <li>
            <div class="commenterImage">
                <img src="http://placekitten.com/48/48" />
            </div>
            <div class="commentText">
                <p class="">Hello this is a test comment.</p> <span class="date sub-text">Thursday, April 4, 2019</span>

            </div>

        </li>
        @foreach (var item in Model)
        {
            <li>
                <div class="commenterImage">
                    <img src="img.png" onerror="this.onload=null; this.src=getImagePath();" />
                </div>
                <div class="commentText">
                    <p class="">@Html.Raw(item.Comment)</p> <span class="date sub-text">@item.InsertedOn</span>

                </div>
            </li>
        }
    </ul>
</div>
@using (Html.BeginForm("Comments", "CrossSiteScripting", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" style="max-width:100%;" id="searchQuery" placeholder="" name="searchQuery" value="">
        </div>
        <div class="ccol-sm-2">
            <button type="submit" class="btn btn-default">Add Your Comment</button>
        </div>
    </div>
}

@section scripts {
    <script>
        function getImagePath() {
            var val = Math.floor(Math.random() * (60 - 30)) + 30;
            return "http://placekitten.com/" + val + "/" + val + "/";
        }
    </script>
}